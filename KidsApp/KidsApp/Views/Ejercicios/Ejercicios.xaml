<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsApp.Views.Ejercicios.Ejercicios">
    <Grid>
        <Image Source="fondo.jpeg" Aspect="Fill"/>
        <ScrollView>
            <StackLayout Margin="20">
                <Label Text="Si estas empezando a entrenar, te aconsejo que empieces por este nivel:"/>
                <Button Text="Nivel Principiante" BorderColor="Black" Clicked="Button_GoToNewbie" BackgroundColor="#541c83" TextColor="White" />
                <Label Text="Si ya tienes tiempo ejercitando y buscas un poco mas de intensidad:"/>
                <Button Text="Nivel Intermedio" BorderColor="Black" Clicked="Button_GoToIntermediate" BackgroundColor="#541c83" TextColor="White" />
                <Label Text="Si buscas perfeccionar los ejercicios:"/>
                <Button Text="Nivel Avanzado" BorderColor="Black" Clicked="Button_GoToAdvance" BackgroundColor="#541c83" TextColor="White" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>